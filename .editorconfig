root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
trim_trailing_whitespace = true
insert_final_newline = true

[*.{yaml,yml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.rs]
indent_size = 4

[{Makefile,**.mk}]
indent_style = tab

# 4 space indentation
[*.{py}]
indent_style = space
indent_size = 4
